<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/app_loading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dip">
        <ProgressBar android:layout_width="24dip"
            android:layout_height="24dip"
            android:indeterminateDrawable="@anim/app_refresh_progress"
            android:layout_gravity="center"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_loading"
            android:padding="5dip"
            android:textColor="@color/gray_light"/>
    </LinearLayout>
    <GridView android:id="@+id/identification_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="true"
        android:gravity="center"
        android:numColumns="3"
        android:layout_margin="4dip"
        android:listSelector="@null"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dip"
        android:horizontalSpacing="4dip"
        android:cacheColorHint="#00000000"
        android:background="#FFFFFA">
    </GridView>
</LinearLayout>
