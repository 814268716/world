<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFE0">
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:background="@drawable/main_banner_bg">
        <Button android:id="@+id/app_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:layout_alignParentLeft="true"
            android:background="@drawable/app_btn_back"/>
        <TextView android:id="@+id/appreciate_archiver_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/appreciate_archiver_title"
            android:textSize="20dip"
            android:textColor="#000000"/>
        <FrameLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:background="@drawable/app_btn_green">
             <ProgressBar android:id="@+id/app_loading_pbar"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:indeterminateDrawable="@anim/app_refresh_progress"
                android:layout_gravity="center_horizontal"/>
            <ImageView android:id="@+id/app_loading_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/app_icon_refresh"
                android:visibility="gone"/>
        </FrameLayout>
    </RelativeLayout>
    <TextView android:id="@+id/app_loading_tip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="正在拉取数据..."/>
    <ListView android:id="@+id/appreciate_archiver_list"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
         android:divider="@drawable/app_divider_h_gray">
    </ListView>
</LinearLayout>
