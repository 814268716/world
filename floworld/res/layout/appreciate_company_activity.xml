<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFA">
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:background="@drawable/main_banner_bg">
        <Button android:id="@+id/app_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_back"
            android:layout_alignParentLeft="true"
            android:background="@drawable/app_btn_back"/>
        <TextView android:id="@+id/appreciate_latest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/company_title"
            android:textSize="20dip"
            android:textColor="#000000"/>
        <FrameLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:background="@drawable/app_btn_green">
            <ProgressBar android:id="@+id/app_loading_pbar"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:indeterminateDrawable="@anim/app_refresh_progress"
                android:layout_gravity="center_horizontal"/>
            <ImageView android:id="@+id/app_loading_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_refresh"
                android:src="@drawable/app_icon_refresh"
                android:visibility="gone"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout android:id="@+id/appreciate_company_note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_company_bg"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:padding="4dip"
        android:orientation="vertical">
        <TextView android:id="@+id/appreciate_company_note_details"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/company_note_details"
            android:textSize="12dip"
            android:textColor="#ffffff"/>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/company_note_contact"
                android:textColor="#ffffff"
                android:textSize="12dip"
                android:layout_marginRight="5dip"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/company_note_tel"
                android:textSize="12dip"
                android:textColor="#ffffff"/>
            <TextView android:id="@+id/appreciate_company_note_tel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/company_note_tel_number"
                android:autoLink="phone"
                android:textSize="12dip"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/app_loading_tip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/app_loading"/>
    <ListView android:id="@+id/appreciate_company_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="true"
        android:gravity="center"
        android:numColumns="3"
        android:layout_margin="4dip"
        android:layout_marginTop="0dip"
        android:listSelector="@null"
        android:stretchMode="columnWidth"
        android:dividerHeight="5dip"
        android:divider="@null"
        android:horizontalSpacing="4dip"
        android:cacheColorHint="#00000000">
    </ListView>
</LinearLayout>
